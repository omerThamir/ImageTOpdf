<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEDEF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/openConvertToPdfActivity"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_changed_background"
        android:text="convert image tp pdf"
        android:textColor="#EBEDEF">
    </Button>

    <Button
        android:id="@+id/openMergePdfActivity"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_changed_background"
        android:text="Merge pdf"
        android:textColor="#EBEDEF"></Button>


    <include
        android:id="@+id/permissionDeniedInclude"
        layout="@layout/expalination_permissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </include>

</LinearLayout>