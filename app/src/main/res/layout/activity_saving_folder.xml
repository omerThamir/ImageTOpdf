<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SavingFolderActivity">

    <FrameLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80070707"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/returnToProcACTVBTN"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/circular_changed_background_for_main_btn"
            android:src="@drawable/ic_baseline_keyboard_backspace_24">

        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/savedOrMergedFileTV"
            android:textColor="#F8F5F5"
            android:textSize="17dp">

        </TextView>

    </FrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/savingFileRecycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:padding="5dp" />

</LinearLayout>