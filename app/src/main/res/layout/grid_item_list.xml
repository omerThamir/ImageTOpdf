            android:layout_height="100dp"
            android:background="@drawable/changed_background_for_recycler_view_items"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/four_images">

        </ImageView>

</androidx.cardview.widget.CardView>